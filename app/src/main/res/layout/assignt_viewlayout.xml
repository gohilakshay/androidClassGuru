<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="File Name"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Date"
                android:layout_alignRight="@+id/Date"
                android:layout_below="@+id/textView25"
                android:layout_marginTop="17dp"
                android:text="Faculty"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView25"
                android:layout_alignRight="@+id/textView25"
                android:layout_below="@+id/textView28"
                android:layout_marginTop="22dp"
                android:text="Date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView25"
                android:layout_alignBottom="@+id/textView25"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/Date"
                android:layout_toRightOf="@+id/Date"
                android:text=":"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Date"
                android:layout_alignLeft="@+id/textView30"
                android:layout_alignStart="@+id/textView30"
                android:text=":"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView32"
                android:layout_alignStart="@+id/textView32"
                android:layout_alignTop="@+id/Date"
                android:text=":"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView30"
                android:layout_alignBottom="@+id/textView30"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/textView30"
                android:layout_toRightOf="@+id/textView30"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_Faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView32"
                android:layout_alignBottom="@+id/textView32"
                android:layout_alignLeft="@+id/tv_fileName"
                android:layout_alignStart="@+id/tv_fileName"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_UploadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignLeft="@+id/tv_Faculty"
                android:layout_alignStart="@+id/tv_Faculty"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Date"
                android:layout_alignRight="@+id/Date"
                android:layout_below="@+id/Date"
                android:layout_marginTop="19dp"
                android:text="Description"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView33"
                android:layout_alignStart="@+id/textView33"
                android:layout_alignTop="@+id/textView38"
                android:text=":" />

            <TextView
                android:id="@+id/tv_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_UploadDate"
                android:layout_alignStart="@+id/tv_UploadDate"
                android:layout_alignTop="@+id/textView39"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_readMore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_Desc"
                android:layout_alignStart="@+id/tv_Desc"
                android:layout_below="@+id/tv_Desc"
                android:layout_marginTop="14dp"
                android:text="ReadMore" />

            <TextView
                android:id="@+id/tv_readLess1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_readMore1"
                android:layout_alignRight="@+id/tv_readMore1"
                android:layout_alignTop="@+id/tv_readMore1"
                android:text="ReadLess" />

            <!--<com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/tv_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_UploadDate"
                android:layout_alignStart="@+id/tv_UploadDate"
                android:layout_alignTop="@+id/textView39"
                android:text="TextView"
                app:trimExpandedText="Read More"
                app:trimCollapsedText="Read Less"
                app:trimLength="2"
                app:trimMode="trimModeLine"
                app:colorClickableText="#9e9d9d"/>-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
