<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow android:padding="10dp">

                <TextView

                    android:id="@+id/tv_testDate"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Test \n Date"
                    android:textAlignment="center" />

                <TextView

                    android:id="@+id/tv_testBatch"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Batch \n Id"
                    android:textAlignment="center" />

                <TextView

                    android:id="@+id/tv_Obtain"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Obtained \n Marks"
                    android:textAlignment="center" />

                <TextView

                    android:id="@+id/tv_Total"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Total \n Marks"
                    android:textAlignment="center" />

                <TextView

                    android:id="@+id/tv_Passing"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Passing"
                    android:textAlignment="center" />

                <TextView

                    android:id="@+id/tv_Subject"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>
