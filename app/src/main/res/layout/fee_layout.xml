<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.classguru.classguru.Fee_activity">

    <!--<RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >-->
        <TableLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="InstallMent \n Option"
                    android:textStyle="bold" />
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Installment \n Type"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Total \n Fees"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Discount \n"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/tv_Option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_Discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />
            </TableRow>

            <TableRow android:padding="10dp">
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Final \n Amount"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Received \n"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Balance\n"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Amount/ \n Install"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/tv_Final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_Received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_Balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />

                <TextView
                    android:id="@+id/tv_AmpInstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="0.25"
                    android:text="100000" />
            </TableRow>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#b3b3b3"/>
        </TableLayout>


        <HorizontalScrollView
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TableLayout
                android:layout_weight="4.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TableRow android:layout_weight="9">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment \n Mode"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Payment \n Date"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Cheque \n Date"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Bank \n Name"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Cheque \n No."
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Transaction \n ID"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Received \n "
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Paid \n Recently"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Balance \n "
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <ListView
                android:layout_weight="1"
                android:id="@+id/lv_feeShow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
            </LinearLayout>

        </HorizontalScrollView>

    <!--</ScrollView>-->


</LinearLayout>
