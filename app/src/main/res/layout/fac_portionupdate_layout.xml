<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<TextView
                android:id="@+id/tv_PortionBatchView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_PortionSubjView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_PortionBatchView"
                android:layout_toStartOf="@+id/tv_PortionBatchView"
                android:text="Batch Name :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_PortionBatchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8" />

            <TextView
                android:id="@+id/tv_PortionSubjView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignLeft="@+id/tv_allPortion"
                android:layout_alignStart="@+id/tv_allPortion" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_alignRight="@+id/textView9"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="19dp"
                android:text="Subject Name :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView12"
                android:layout_alignRight="@+id/textView12"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="28dp"
                android:text="All Topics :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_allPortion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignLeft="@+id/tv_PortionBatchView"
                android:layout_alignStart="@+id/tv_PortionBatchView" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="25dp"
                android:text="Remain Topics :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remPortion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView12"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignLeft="@+id/tv_allPortion"
                android:layout_alignStart="@+id/tv_allPortion" />

            <TextView
                android:id="@+id/tv_tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView11"
                android:layout_alignRight="@+id/textView11"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="29dp"
                android:text="Total Topics :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_totalTopicsPortion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_tot"
                android:layout_alignBottom="@+id/tv_tot"
                android:layout_alignLeft="@+id/tv_remPortion"
                android:layout_alignStart="@+id/tv_remPortion" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView12"
                android:layout_alignRight="@+id/textView12"
                android:layout_below="@+id/tv_tot"
                android:layout_marginTop="24dp"
                android:text="Completed :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_completedPortionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_totalTopicsPortion"
                android:layout_alignStart="@+id/tv_totalTopicsPortion"
                android:layout_alignTop="@+id/textView11" />

            <Button
                android:backgroundTint="#09B0B9"
                android:id="@+id/btn_updatePortionTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_completedPortionView"
                android:layout_alignStart="@+id/tv_completedPortionView"
                android:layout_below="@+id/tv_completedPortionView"
                android:layout_marginTop="39dp"
                android:text="Update" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
