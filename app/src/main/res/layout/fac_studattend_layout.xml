            android:background="#d6d7d7"/>

        <ListView
            android:layout_weight="5"
            android:id="@+id/lv_facStudMark"
            android:layout_width="match_parent"
            android:layout_height="248dp" />

        <Button
            android:id="@+id/btn_markAbsent"
