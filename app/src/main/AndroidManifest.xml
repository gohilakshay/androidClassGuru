        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".FacPortionTabActivity"
            android:label="@string/FacPortionTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fac_Announc_tabbActivity"
            android:label="@string/Fac_Announc_tabbActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fee_tabedActivity"
            android:label="@string/Fee_tabedActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Fac_PortionListView_Activity" />
        <activity android:name=".Stud_portionList_Activity" />
        <activity android:name=".Announc_Activity"
            android:screenOrientation="portrait"
            android:label="@string/Fac_Announc_tabbActivity"></activity>
